<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
         A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked.
    -->
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_images_turn_on_key"
        android:summary="@string/pref_images_summary"
        android:title="@string/pref_images_turn_on" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:dependency="@string/pref_images_turn_on_key"
        android:key="@string/pref_images_big_key"
        android:title="@string/pref_images_big_title" />

</PreferenceScreen>