<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miracleas.minbustur"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
     

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Minrutevejledning" >
        <activity
            android:name="com.miracleas.minbustur.FindTripSuggestionsActivity"
            android:label="@string/route_creation" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.miracleas.minbustur.TripSuggestionsActivity"
            android:label="@string/trip_suggestions" android:screenOrientation="portrait"/>
        <activity android:name="com.miracleas.minbustur.TripGuideActivity"
            android:label="@string/trip_guide" android:screenOrientation="portrait"/>
        <activity android:name="com.miracleas.minbustur.TripLegDetailsActivity"
            android:label="@string/trip_leg_details" android:screenOrientation="portrait"/>
        
        <provider
            android:name="com.miracleas.minbustur.provider.MinBusTurProvider"
            android:authorities="com.miracleas.minbustur.provider.MinBusTurProvider"        
            android:exported="false" />
        
        <service
    		android:name="com.miracleas.minbustur.service.ReceiveTransitionsIntentService"
    		android:label="@string/app_name"
    		android:exported="false">
		</service>
		<service
    		android:name="com.miracleas.minbustur.service.TripService"
    		android:label="@string/app_name"
    		android:exported="false">
		</service>
		<service
    		android:name="com.miracleas.minbustur.service.JourneyDetailsService"
    		android:label="@string/app_name"
    		android:exported="false">
		</service>
		
        
    </application>

</manifest>
